{
  "name": "academic-explorer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "verify": "pnpm run typecheck && pnpm run build && pnpm run test && pnpm run lint:fix && pnpm run lint",
    "verify:fast": "pnpm run typecheck && pnpm run build && pnpm run test:unit && pnpm run lint",
    "verify:quick": "pnpm run typecheck && pnpm run build && pnpm run lint",
    "test": "timeout 300s pnpm test:safe",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest --ui --no-coverage --silent",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --coverage --silent",
    "test:coverage:all": "pnpm test:coverage:unit && pnpm test:coverage:component && pnpm test:coverage:integration && pnpm test:coverage:e2e:vitest && pnpm coverage:merge",
    "test:coverage:unit": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --project unit --coverage --silent --reporter=dot",
    "test:coverage:component": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --project component --coverage --silent --reporter=dot",
    "test:coverage:integration": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --project integration --coverage --silent --reporter=dot",
    "test:coverage:e2e:vitest": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --project e2e --coverage --silent --reporter=dot",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project unit --no-coverage --silent",
    "test:component": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project component --no-coverage --silent",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project integration --no-coverage --silent",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e --no-coverage --silent",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest --no-coverage",
    "test:watch:unit": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest --project unit --no-coverage",
    "test:watch:component": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest --project component --no-coverage",
    "test:watch:integration": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest --project integration --no-coverage",
    "test:watch:e2e": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest --project e2e --no-coverage",
    "test:safe": "NODE_OPTIONS='--max-old-space-size=2048 --expose-gc --max-semi-space-size=32' timeout 90s vitest run --project unit src/test/routes/*.unit.test.ts src/test/app-runtime-diagnostic.unit.test.ts src/test/author-loading-diagnostic.unit.test.ts --no-coverage --silent --no-watch --reporter=dot --run",
    "test:safe:all": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc --max-semi-space-size=64' timeout 300s vitest run --project unit --project component --no-coverage --silent --no-watch --reporter=dot --run",
    "test:performance": "VITEST_PERFORMANCE_MONITOR=true NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' vitest run --project unit --project component --no-coverage --reporter=verbose",
    "test:component-only": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run src/components/**/*.test.* --no-coverage --silent",
    "test:e2e:diagnose": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e src/test/entity-loading-diagnosis.e2e.test.ts --no-coverage --silent",
    "test:e2e:works": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e src/test/works-page-loading.e2e.test.ts --no-coverage --silent",
    "test:e2e:search": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e src/test/search-functionality.e2e.test.ts --no-coverage --silent",
    "test:e2e:search-results": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e src/test/search-results.e2e.test.ts --no-coverage --silent",
    "test:e2e:search-all": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc --max-semi-space-size=128' vitest run --project e2e src/test/search*.e2e.test.ts --no-coverage --silent",
    "test:e2e:all": "./scripts/run-e2e-tests.sh",
    "test:e2e:playwright": "PLAYWRIGHT_COVERAGE=1 playwright test",
    "test:e2e:playwright:coverage": "PLAYWRIGHT_COVERAGE=1 playwright test --reporter=html",
    "coverage:merge": "tsx scripts/merge-coverage.ts",
    "coverage:report": "echo 'Coverage reports available at coverage/merged/html/index.html (after running tests with coverage)'",
    "coverage:report:text": "echo 'Coverage text reports are shown during test execution with --coverage flag'",
    "coverage:clean": "rm -rf coverage/",
    "coverage:full": "pnpm coverage:clean && pnpm test:coverage:all && pnpm coverage:report",
    "coverage:unit-only": "pnpm test:coverage:unit && c8 report --reporter=html --reports-dir=coverage/unit",
    "coverage:component-only": "pnpm test:coverage:component && c8 report --reporter=html --reports-dir=coverage/component",
    "coverage:integration-only": "pnpm test:coverage:integration && c8 report --reporter=html --reports-dir=coverage/integration"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.5",
    "@mantine/core": "^8.2.4",
    "@mantine/dates": "^8.2.5",
    "@mantine/hooks": "^8.2.4",
    "@mantine/vanilla-extract": "^8.2.4",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-router": "^1.91.3",
    "@types/cytoscape": "^3.21.9",
    "@types/d3": "^7.4.3",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/recipes": "^0.5.7",
    "@xyflow/react": "^12.8.4",
    "clsx": "^2.1.1",
    "cytoscape": "^3.33.1",
    "cytoscape-cose-bilkent": "^4.1.0",
    "cytoscape-dagre": "^2.5.0",
    "d3": "^7.9.0",
    "framer-motion": "^12.23.12",
    "html-to-image": "^1.11.13",
    "idb": "^8.0.3",
    "immer": "^10.1.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-error-boundary": "^6.0.0",
    "recharts": "^3.1.2",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@tanstack/react-router-devtools": "^1.91.3",
    "@tanstack/router-vite-plugin": "^1.91.3",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^9.14.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.17.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fake-indexeddb": "^6.1.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "nyc": "^17.1.0",
    "playwright": "^1.54.2",
    "playwright-chromium": "^1.54.2",
    "typescript": "^5",
    "typescript-eslint": "^8.39.1",
    "undici": "^7.13.0",
    "vite": "^6.0.5",
    "vite-plugin-checker": "^0.10.2",
    "vitest": "^3.2.4"
  }
}
