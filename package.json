{
  "name": "academic-explorer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "timeout 120s pnpm test:safe",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=8192' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --coverage",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project unit",
    "test:component": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project component",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project integration",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=8192' vitest",
    "test:watch:unit": "NODE_OPTIONS='--max-old-space-size=8192' vitest --project unit",
    "test:watch:component": "NODE_OPTIONS='--max-old-space-size=8192' vitest --project component",
    "test:watch:integration": "NODE_OPTIONS='--max-old-space-size=8192' vitest --project integration",
    "test:watch:e2e": "NODE_OPTIONS='--max-old-space-size=8192' vitest --project e2e",
    "test:safe": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project unit --project component",
    "test:component-only": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/components/**/*.test.*",
    "test:e2e:diagnose": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e src/test/entity-loading-diagnosis.e2e.test.ts",
    "test:e2e:works": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e src/test/works-page-loading.e2e.test.ts",
    "test:e2e:search": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e src/test/search-functionality.e2e.test.ts",
    "test:e2e:search-results": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e src/test/search-results.e2e.test.ts",
    "test:e2e:search-all": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --project e2e src/test/search*.e2e.test.ts",
    "test:e2e:all": "./scripts/run-e2e-tests.sh"
  },
  "dependencies": {
    "@mantine/core": "^8.2.4",
    "@mantine/hooks": "^8.2.4",
    "@mantine/vanilla-extract": "^8.2.4",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-router": "^1.91.3",
    "@vanilla-extract/css": "^1.17.4",
    "idb": "^8.0.3",
    "immer": "^10.1.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-error-boundary": "^6.0.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tanstack/react-router-devtools": "^1.91.3",
    "@tanstack/router-vite-plugin": "^1.91.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.17.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "playwright": "^1.54.2",
    "typescript": "^5",
    "typescript-eslint": "^8.39.1",
    "undici": "^7.13.0",
    "vite": "^6.0.5",
    "vitest": "^3.2.4"
  }
}
