{
  "name": "academic-explorer",
  "private": true,
  "version": "5.8.2",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:nx": "tsx scripts/knip-nx.ts",
    "preview": "vite preview",
    "test": "vitest --project=unit --project=component --coverage",
    "test:watch": "vitest --watch --project=unit --project=component --coverage",
    "test:ui": "vitest --ui --project=unit --project=component --coverage",
    "test:unit": "vitest --project=unit --coverage",
    "test:unit:run": "vitest run --project=unit --coverage",
    "test:unit:watch": "vitest --watch --project=unit --coverage",
    "test:component": "vitest --project=component",
    "test:component:watch": "vitest --watch --project=component",
    "test:integration": "vitest --project=integration",
    "test:integration:run": "vitest run --project=integration",
    "test:integration:watch": "vitest --watch --project=integration",
    "test:e2e": "vitest --project=e2e",
    "test:e2e:watch": "vitest --watch --project=e2e",
    "test:e2e:ui": "vitest --project=e2e --ui",
    "test:e2e:headed": "HEADLESS=false vitest run --project=e2e",
    "verify": "nx verify",
    "verify:full": "nx verify:full",
    "verify:parallel": "nx verify:parallel",
    "nx": "nx",
    "prepare": "husky",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "clean": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
    "hooks:install": "husky",
    "hooks:test": "npx lint-staged --diff-filter=A",
    "coverage:report": "node scripts/generate-coverage-report.js",
    "a11y:test": "nx a11y:test",
    "a11y:lighthouse": "nx a11y:lighthouse",
    "a11y:dev": "nx a11y:dev",
    "a11y:ci": "nx a11y:ci",
    "test:a11y": "nx test:a11y",
    "test:a11y:e2e": "nx test:a11y:e2e",
    "verify:a11y": "nx verify:a11y",
    "licenses:generate": "license-checker --production --onlyAllow 'MIT;Apache-2.0;BSD-3-Clause;ISC;BSD-2-Clause;0BSD;CC0-1.0;Unlicense;WTFPL' --excludePrivatePackages --customPath .license-checker-config.json --markdown --out ACKNOWLEDGEMENTS.md",
    "licenses:check": "license-checker --production --failOn 'GPL;LGPL;AGPL;SSPL;EUPL;OSL;EPL;MPL;CC-BY-SA;CC-BY-NC' --excludePrivatePackages --summary",
    "licenses:summary": "license-checker --production --excludePrivatePackages --summary"
  },
  "dependencies": {
    "@mantine/core": "^8.3.1",
    "@mantine/dates": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "@mantine/notifications": "^8.3.1",
    "@mantine/spotlight": "^8.3.1",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-persist-client": "^5.89.0",
    "@tanstack/react-router": "^1.131.44",
    "@tanstack/react-table": "^8.21.3",
    "@xyflow/react": "^12.8.5",
    "d3-force": "^3.0.0",
    "d3-random": "^3.0.1",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "idb": "^8.0.3",
    "immer": "^10.1.3",
    "lodash-es": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.9",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@lhci/cli": "^0.15.1",
    "@nx/eslint": "^21.5.2",
    "@nx/playwright": "^21.5.2",
    "@nx/react": "^21.5.2",
    "@nx/vite": "^21.5.2",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "^1.55.0",
    "@semantic-release/changelog": "^6.0.3",
    "@tanstack/devtools-vite": "^0.2.14",
    "@tanstack/react-devtools": "^0.6.8",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@tanstack/react-router-devtools": "^1.131.44",
    "@tanstack/router-plugin": "^1.131.44",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/d3-force": "^3.0.10",
    "@types/d3-random": "^3.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-core": "^4.10.3",
    "eslint": "^9.33.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "knip": "^5.63.1",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.1.6",
    "nx": "21.5.2",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.55.0",
    "semantic-release": "^24.2.8",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  },
  "nx": {}
}
