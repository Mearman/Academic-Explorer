{
  "name": "academic-explorer",
  "version": "20.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": "Mearman/Academic-Explorer.git",
  "scripts": {
    "barrels": "barrelsby --config .barrelsby.json",
    "barrels:dry": "barrelsby --config .barrelsby.json --delete false",
    "build": "nx run-many -t build",
    "ci:logs": "tsx scripts/monitor-ci.ts logs",
    "ci:status": "tsx scripts/monitor-ci.ts status",
    "ci:watch": "tsx scripts/monitor-ci.ts watch",
    "clean": "nx reset && rm -rf dist coverage .nx/cache .tanstack node_modules/.vite && pnpm --filter='*' clean",
    "cli": "tsx apps/cli/src/openalex-cli.ts",
    "coverage:ci": "nx coverage:ci",
    "coverage:report": "nx coverage:report",
    "deps:analyze": "nx show project web --json | jq '.implicitDependencies' && nx graph --file=deps-graph.json && echo 'Dependency graph generated'",
    "deps:audit": "pnpm audit --audit-level moderate",
    "deps:check": "tsx tools/scripts/check-dependencies.ts",
    "deps:outdated": "pnpm outdated",
    "deps:update": "pnpm update --interactive --latest",
    "dev": "pnpm --filter @academic-explorer/web dev",
    "generate:test-urls": "tsx scripts/generate-test-urls.ts",
    "generate:tokens": "tsx scripts/generate-tokens.ts",
    "kill-nx": "tsx scripts/kill-nx-processes.ts",
    "kill-nx:emergency": "pkill -f nx; pkill -f '@nx/daemon'; rm -rf .nx /tmp/nx* /tmp/*nx* 2>/dev/null || true; nx reset",
    "licenses:check": "tsx tools/scripts/check-licenses.ts",
    "licenses:generate": "monorepo-license-checker --markdown --exclude-private-packages",
    "licenses:summary": "monorepo-license-checker --exclude-private-packages",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint",
    "monitor-ci": "tsx scripts/monitor-ci.ts",
    "nx-monitor": "tsx scripts/nx-process-monitor.ts",
    "nx-monitor:start": "tsx scripts/nx-process-monitor.ts start",
    "nx-monitor:status": "tsx scripts/nx-process-monitor.ts status",
    "nx-monitor:stop": "tsx scripts/nx-process-monitor.ts stop",
    "prepare": "husky",
    "preview": "pnpm --filter @academic-explorer/web preview",
    "release": "nx release",
    "release:dry": "nx release --dry-run",
    "release:publish": "nx release publish",
    "release:version": "nx release version",
    "speckit": "uvx --from git+https://github.com/github/spec-kit.git specify",
    "sync:targets": "tsx tools/generators/sync-targets/cli.ts",
    "sync:targets:dry": "tsx tools/generators/sync-targets/cli.ts --dry-run",
    "syncpack": "syncpack",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:lint": "syncpack lint",
    "syncpack:list": "syncpack list-mismatches",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' NX_DAEMON=false timeout 300 nx run-many -t test --output-style=stream",
    "test:aggregate": "tsx scripts/aggregate-tests.ts",
    "test:nx": "NX_DAEMON=false timeout 300 nx run-many -t test --output-style=stream -- --reporter=verbose",
    "test:packages": "NX_DAEMON=false timeout 300 vitest --run --config vite.config.base.ts --reporter=verbose",
    "test:quality-gates": "NODE_OPTIONS='--max-old-space-size=8192' NX_DAEMON=false timeout 1200 nx run-many -t test --output-style=stream",
    "test:urls": "tsx scripts/test-urls.ts",
    "test:verbose": "timeout 600 vitest --run --config vite.config.base.ts --reporter=verbose --reporter=json",
    "test:web": "cd apps/web && vitest --run --config vitest.config.ts --reporter=verbose",
    "typecheck": "nx run-many -t typecheck",
    "typecheck:ci": "nx run-many -t typecheck --verbose",
    "typecheck:fast": "tsx scripts/fast-typecheck.ts",
    "validate": "nx run-many -t validate",
    "verify:parallel": "nx verify:parallel"
  },
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@eslint/markdown": "7.5.1",
    "@nx/devkit": "22.0.2",
    "@nx/eslint": "22.0.2",
    "@nx/eslint-plugin": "22.0.2",
    "@nx/js": "22.0.2",
    "@nx/playwright": "22.0.2",
    "@nx/react": "22.0.2",
    "@nx/rollup": "22.0.2",
    "@nx/storybook": "22.0.2",
    "@nx/vite": "22.0.2",
    "@nx/vitest": "22.1.2",
    "@nx/web": "22.0.2",
    "@octokit/rest": "22.0.1",
    "@playwright/test": "1.55.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/npm": "13.1.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.1",
    "@swc/helpers": "0.5.11",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/d3": "7.4.3",
    "@types/d3-force": "3.0.10",
    "@types/d3-random": "3.0.3",
    "@types/node": "24.10.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/three": "0.181.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@typescript-eslint/utils": "8.46.3",
    "@vanilla-extract/vite-plugin": "5.1.1",
    "@vitejs/plugin-react": "5.1.1",
    "@vitest/coverage-v8": "4.0.10",
    "@vitest/ui": "4.0.10",
    "barrelsby": "2.8.1",
    "chokidar": "4.0.3",
    "eslint": "9.39.1",
    "eslint-config-xo": "0.49.0",
    "eslint-config-xo-typescript": "9.0.0",
    "eslint-formatter-compact": "9.0.1",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.22",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "eslint-plugin-yaml": "1.1.3",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "jsdom": "27.1.0",
    "koa": "3.1.1",
    "lint-staged": "16.2.1",
    "monorepo-license-checker": "0.3.0",
    "msw": "2.12.3",
    "nx": "22.0.2",
    "prettier": "3.6.2",
    "semantic-release": "25.0.2",
    "syncpack": "13.0.4",
    "tslib": "2.8.1",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "typescript-eslint": "8.48.0",
    "vite": "7.2.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.10",
    "vitest-axe": "0.1.0",
    "zod": "4.1.13"
  },
  "nx": {
    "includedScripts": []
  },
  "pnpm": {
    "overrides": {
      "koa": "^3.1.1",
      "js-yaml": ">=4.1.1",
      "glob": ">=10.5.0",
      "vitest": "^4.0.10",
      "body-parser": ">=2.2.1"
    }
  }
}
