{
  "name": "academic-explorer-monorepo",
  "private": true,
  "version": "8.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git"
  },
  "scripts": {
    "dev": "pnpm --filter @academic-explorer/web dev",
    "cli": "tsx apps/cli/src/simple-cli.ts",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "clean": "nx reset && rm -rf dist coverage .nx/cache .tanstack node_modules/.vite && pnpm --filter='*' clean",
    "verify": "nx verify",
    "verify:full": "nx verify:full",
    "verify:parallel": "nx verify:parallel",
    "nx": "nx",
    "knip": "knip",
    "knip:workspace": "knip --workspace",
    "prepare": "husky",
    "licenses:generate": "license-checker --production --onlyAllow 'MIT;Apache-2.0;BSD-3-Clause;ISC;BSD-2-Clause;0BSD;CC0-1.0;Unlicense;WTFPL' --excludePrivatePackages --customPath .license-checker-config.json --markdown --out ACKNOWLEDGEMENTS.md",
    "licenses:check": "license-checker --production --failOn 'GPL;LGPL;AGPL;SSPL;EUPL;OSL;EPL;MPL;CC-BY-SA;CC-BY-NC' --excludePrivatePackages --summary",
    "licenses:summary": "license-checker --production --excludePrivatePackages --summary"
  },
  "devDependencies": {
    "@nx/eslint": "^21.5.3",
    "@nx/playwright": "^21.5.3",
    "@nx/react": "^21.5.3",
    "@nx/vite": "^21.5.3",
    "@playwright/test": "^1.47.2",
    "@tanstack/devtools-vite": "^0.3.3",
    "@tanstack/router-plugin": "^1.87.0",
    "@vanilla-extract/vite-plugin": "^4.0.17",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "license-checker": "^25.0.1",
    "nx": "21.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^2.1.5",
    "zod": "^3.24.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  },
  "nx": {}
}