{
  "name": "tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/scripts",
  "projectType": "library",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "inputs": ["default", "{workspaceRoot}/tsconfig.base.json"]
    },
    "lint": {
      "options": {
        "command": "NODE_OPTIONS='--import tsx' eslint --no-warn-ignored scripts/**/*.ts"
      }
    }
  }
}
