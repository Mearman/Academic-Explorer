{
  "name": "tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/scripts",
  "projectType": "library",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "{workspaceRoot}/tsconfig.base.json"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint scripts",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "{workspaceRoot}/eslint.config.base.ts"
      ]
    }
  }
}