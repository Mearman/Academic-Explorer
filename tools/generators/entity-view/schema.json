{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Entity View Generator Schema",
  "description": "Schema for creating a new OpenAlex entity view",
  "properties": {
    "entity": {
      "type": "string",
      "description": "The OpenAlex entity type",
      "enum": ["work", "author", "source", "institution", "publisher", "funder", "topic", "concept"],
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "The project where the entity view will be created",
      "default": "web"
    },
    "withMocks": {
      "type": "boolean",
      "description": "Generate mock data for testing",
      "default": true
    },
    "withIntegration": {
      "type": "boolean",
      "description": "Generate integration tests",
      "default": true
    },
    "withE2E": {
      "type": "boolean",
      "description": "Generate E2E tests",
      "default": true
    },
    "withLazyLoading": {
      "type": "boolean",
      "description": "Generate lazy loading setup",
      "default": true
    },
    "withErrorHandling": {
      "type": "boolean",
      "description": "Generate error boundaries and handling",
      "default": true
    },
    "skipTests": {
      "type": "boolean",
      "description": "Skip generating test files",
      "default": false
    },
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files",
      "default": false
    }
  },
  "required": ["entity"],
  "additionalProperties": false
}