{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Library Generator Schema",
  "description": "Schema for creating a new library package",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the library (kebab-case)",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "description": {
      "type": "string",
      "description": "Description of the library purpose",
      "minLength": 10
    },
    "type": {
      "type": "string",
      "description": "Type of library to create",
      "enum": ["utility", "feature", "data", "ui", "shared"],
      "default": "utility"
    },
    "unitTestRunner": {
      "type": "string",
      "description": "Test runner to use",
      "enum": ["vitest", "none"],
      "default": "vitest"
    },
    "bundler": {
      "type": "string",
      "description": "Bundler to use",
      "enum": ["tsc", "vite", "esbuild"],
      "default": "tsc"
    },
    "importPath": {
      "type": "string",
      "description": "Custom import path for the package",
      "pattern": "^@academic-explorer/[a-z][a-z0-9-]*$"
    },
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files",
      "default": false
    }
  },
  "required": ["name"],
  "additionalProperties": false
}