{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Component Generator Schema",
  "description": "Schema for creating a new React component",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component (PascalCase)",
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "The project where the component will be created",
      "default": "web"
    },
    "directory": {
      "type": "string",
      "description": "Directory within the project (e.g., 'components', 'components/ui', 'components/features')"
    },
    "skipTests": {
      "type": "boolean",
      "description": "Skip generating test files",
      "default": false
    },
    "skipStorybook": {
      "type": "boolean",
      "description": "Skip generating Storybook story",
      "default": false
    },
    "export": {
      "type": "boolean",
      "description": "Export component from barrel index",
      "default": true
    },
    "flat": {
      "type": "boolean",
      "description": "Create component files directly in directory without subfolder",
      "default": false
    },
    "withHooks": {
      "type": "boolean",
      "description": "Generate corresponding hooks file",
      "default": false
    },
    "withTypes": {
      "type": "boolean",
      "description": "Generate corresponding types file",
      "default": false
    },
    "styled": {
      "type": "boolean",
      "description": "Generate with styling setup",
      "default": true
    },
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files",
      "default": false
    }
  },
  "required": ["name"],
  "additionalProperties": false
}