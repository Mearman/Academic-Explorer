{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    "@nx/vite/plugin",
    "@nx/eslint/plugin",
    "@nx/playwright/plugin"
  ],
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build", "typecheck"],
      "inputs": ["production", "^production", "{workspaceRoot}/vite.config.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:unit:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:component:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:integration:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:e2e:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*", "{workspaceRoot}/playwright.config.ts"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "preview": {
      "cache": true,
      "inputs": ["^production", "{workspaceRoot}/vite.config.ts", "{workspaceRoot}/config/**/*"],
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/eslint.config.ts"],
      "outputs": ["{projectRoot}/**/*.{js,jsx,ts,tsx}"]
    },
    "lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/eslint.config.ts"],
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/tsconfig*.json", "{workspaceRoot}/config/**/*"]
    },
    "knip": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/knip.ts", "{workspaceRoot}/tsconfig*.json", "{workspaceRoot}/package.json"],
      "outputs": []
    },
    "knip:nx": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/knip.ts", "{workspaceRoot}/tsconfig*.json", "{workspaceRoot}/package.json", "{workspaceRoot}/scripts/knip-nx.ts"],
      "outputs": []
    },
    "knip:fix": {
      "cache": false,
      "inputs": ["default", "^production", "{workspaceRoot}/knip.ts", "{workspaceRoot}/tsconfig*.json", "{workspaceRoot}/package.json"],
      "outputs": ["{projectRoot}/**/*.{js,jsx,ts,tsx}"]
    },
    "a11y:test": {
      "cache": true,
      "dependsOn": ["build"],
      "inputs": ["^production", "{workspaceRoot}/.pa11yci.json", "{projectRoot}/dist/**/*"],
      "outputs": ["pa11y-results.json"]
    },
    "a11y:lighthouse": {
      "cache": true,
      "dependsOn": ["build"],
      "inputs": ["^production", "{workspaceRoot}/.lighthouserc.js", "{projectRoot}/dist/**/*"],
      "outputs": [".lighthouseci/**/*"]
    },
    "a11y:dev": {
      "cache": false,
      "inputs": ["default", "{workspaceRoot}/.pa11yci-dev.json"],
      "outputs": ["pa11y-results.json"]
    },
    "a11y:ci": {
      "cache": true,
      "dependsOn": ["a11y:test", "a11y:lighthouse"],
      "inputs": [],
      "outputs": ["pa11y-results.json", ".lighthouseci/**/*"]
    },
    "test:a11y": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:a11y:e2e": {
      "cache": true,
      "dependsOn": ["build"],
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.ts", "{workspaceRoot}/config/**/*", "{workspaceRoot}/playwright.config.ts"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "verify:a11y": {
      "cache": true,
      "dependsOn": ["lint", "test:a11y", "a11y:ci"],
      "inputs": [],
      "outputs": []
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js"
    ],
    "sharedGlobals": []
  },
  "generators": {
    "@nx/react": {
      "application": {
        "bundler": "vite",
        "style": "css",
        "linter": "eslint",
        "unitTestRunner": "vitest"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "bundler": "vite",
        "unitTestRunner": "vitest"
      }
    }
  }
}