{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tui": {
    "enabled": false,
    "autoExit": true
  },
  "useDaemonProcess": true,
  "daemon": {
    "options": {
      "shutdownTimeoutMs": 10000,
      "heartbeatIntervalMs": 60000,
      "processExitTimeoutMs": 15000,
      "cleanupOnProcessExit": true,
      "maxMemoryUsage": "512MB"
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "targetName": "build"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{workspaceRoot}/config/**/*",
        "{projectRoot}/vite.config.base.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:unit:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:component:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:integration:run": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:e2e:run": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/config/**/*",
        "{workspaceRoot}/playwright.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"]
    },
    "preview": {
      "cache": true,
      "inputs": [
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{workspaceRoot}/config/**/*"
      ],
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts",
        "{projectRoot}/eslint.config.ts"
      ],
      "outputs": ["{projectRoot}/**/*.{js,jsx,ts,tsx}"],
      "options": {
        "fix": true,
        "cache": true,
        "cache-location": "{workspaceRoot}/.nx/cache/eslint/"
      }
    },
    "lint": {
      "cache": true,
      "dependsOn": ["lint:fix"],
      "inputs": [
        "default",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts",
        "{projectRoot}/eslint.config.ts"
      ],
      "outputs": ["{workspaceRoot}/.nx/cache/lint-results/{projectName}.json"]
    },
    "typecheck": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/config/**/*",
        "{projectRoot}/tsconfig*.json"
      ],
      "outputs": ["{projectRoot}/dist/tsc"],
      "options": {
        "cacheableOperations": ["typecheck"]
      }
    },
    "knip": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/knip.ts",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/package.json"
      ],
      "outputs": []
    },
    "knip:nx": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/knip.ts",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/tools/scripts/knip-nx.ts"
      ],
      "outputs": []
    },
    "knip:fix": {
      "cache": false,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/knip.ts",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/**/*.{js,jsx,ts,tsx}"]
    },
    "a11y:test": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": [
        "^production",
        "{workspaceRoot}/.pa11yci.json",
        "{projectRoot}/dist/**/*"
      ]
    },
    "a11y:lighthouse": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": [
        "^production",
        "{workspaceRoot}/.lighthouserc.js",
        "{projectRoot}/dist/**/*"
      ]
    },
    "a11y:dev": {
      "cache": false,
      "inputs": ["default", "{workspaceRoot}/.pa11yci-dev.json"]
    },
    "a11y:ci": {
      "cache": false,
      "dependsOn": ["a11y:test", "a11y:lighthouse"],
      "inputs": []
    },
    "test:a11y": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/config/**/*"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:a11y:e2e": {
      "cache": true,
      "dependsOn": ["build"],
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/config/**/*",
        "{workspaceRoot}/playwright.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"]
    },
    "verify:a11y": {
      "cache": true,
      "dependsOn": ["lint", "test:a11y", "a11y:ci"],
      "inputs": [],
      "outputs": []
    },
    "build-storybook": {
      "cache": true
    },
    "validate": {
      "cache": true,
      "dependsOn": ["build", "test", "lint"],
      "inputs": [],
      "outputs": []
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/coverage/**/*",
      "!{projectRoot}/.nx/**/*",
      "!{projectRoot}/node_modules/**/*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/.npmrc"
    ]
  },
  "generators": {
    "@nx/react": {
      "application": {
        "bundler": "vite",
        "style": "css",
        "linter": "eslint",
        "unitTestRunner": "vitest"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "bundler": "vite",
        "unitTestRunner": "vitest",
        "linter": "eslint"
      }
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "runtimeCacheInputs": ["node -v", "pnpm -v"],
        "processTimeout": 600000,
        "lifeCycle": {
          "onProcessSignal": "cleanup",
          "onExit": "cleanup"
        }
      }
    }
  },
  "defaultProject": "web",
  "release": {
    "projectsRelationship": "independent",
    "projects": ["packages/*", "apps/*", "tools/*"],
    "version": {
      "conventionalCommits": true,
      "currentVersionResolverMetadata": {
        "fallbackCurrentVersionResolver": "disk"
      },
      "fallbackCurrentVersionResolver": "disk",
      "preserveLocalDependencyProtocols": true
    },
    "changelog": {
      "projectChangelogs": {
        "file": "{projectRoot}/CHANGELOG.md",
        "renderOptions": {
          "authors": false
        }
      }
    },
    "releaseTagPattern": "{projectName}@{version}",
    "git": {
      "commitMessage": "chore(release): version packages [skip ci]"
    }
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "parallel": 1,
  "cacheDirectory": ".nx/cache",
  "maxCacheSize": "10GB",
  "compression": true
}
