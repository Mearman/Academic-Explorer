{
  "defaults": {
    "timeout": 10000,
    "wait": 2000,
    "chromeLaunchConfig": {
      "executablePath": "/usr/bin/google-chrome-stable",
      "args": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-dev-shm-usage", "--headless", "--disable-gpu"]
    },
    "standard": "WCAG2AA",
    "level": "error",
    "threshold": 0,
    "includeNotices": false,
    "includeWarnings": false,
    "rules": [
      "heading-order",
      "image-alt",
      "label",
      "link-name",
      "button-name",
      "aria-hidden-focus"
    ],
    "ignore": [
      "region",
      "page-has-heading-one"
    ]
  },
  "urls": [
    "http://localhost:4173/",
    "http://localhost:4173/search",
    "http://localhost:4173/about",
    "http://localhost:4173/authors/A1234567890",
    "http://localhost:4173/works/W1234567890",
    "http://localhost:4173/topics/T1234567890"
  ],
  "concurrency": 2
}