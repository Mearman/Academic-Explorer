{
  "name": "@academic-explorer/client",
  "description": "TypeScript client for the OpenAlex API with extensive entity support and utilities",
  "version": "0.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/academic-explorer/academic-explorer.git",
    "directory": "packages/client"
  },
  "scripts": {
    "build": "nx run client:build",
    "build:types": "nx run client:build:types",
    "clean": "nx run client:clean",
    "dev": "nx run client:dev",
    "lint": "nx run client:lint",
    "prepublishOnly": "nx run client:prepublishOnly",
    "test": "nx run client:test",
    "test:coverage": "nx run client:test:coverage",
    "test:integration": "nx run client:test:integration",
    "test:unit": "nx run client:test:unit",
    "test:watch": "nx run client:test:watch",
    "typecheck": "nx run client:typecheck"
  },
  "dependencies": {
    "@academic-explorer/types": "workspace:*",
    "@academic-explorer/utils": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "4.0.10",
    "eslint": "9.39.1",
    "immer": "10.1.3",
    "memfs": "4.47.0",
    "msw": "2.12.3",
    "typescript": "5.9.2",
    "vitest": "4.0.10",
    "vitest-axe": "0.1.0"
  },
  "author": "Academic Explorer",
  "bugs": "https://github.com/academic-explorer/academic-explorer/issues",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "import": "./dist/src/client.js"
    },
    "./cached-client": {
      "types": "./dist/src/cached-client.d.ts",
      "import": "./dist/src/cached-client.js"
    },
    "./internal/static-data-provider": {
      "types": "./dist/src/internal/static-data-provider.d.ts",
      "import": "./dist/src/internal/static-data-provider.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/academic-explorer/academic-explorer/tree/main/packages/client#readme",
  "keywords": [
    "academic",
    "api-client",
    "authors",
    "citations",
    "institutions",
    "openalex",
    "publications",
    "research",
    "scholarly",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "nx": {
    "includedScripts": []
  },
  "types": "./dist/src/index.d.ts"
}
