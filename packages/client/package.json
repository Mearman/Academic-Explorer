{
  "name": "@academic-explorer/client",
  "version": "1.28.0",
  "description": "TypeScript client for the OpenAlex API with comprehensive entity support and utilities",
  "keywords": [
    "openalex",
    "academic",
    "research",
    "scholarly",
    "api-client",
    "typescript",
    "citations",
    "publications",
    "authors",
    "institutions"
  ],
  "author": "Academic Explorer",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/entities/index.js",
      "require": "./dist/entities/index.cjs"
    },
    "./entities/*": {
      "types": "./dist/entities/*.d.ts",
      "import": "./dist/entities/*.js",
      "require": "./dist/entities/*.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js",
      "require": "./dist/utils/*.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -b && tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@academic-explorer/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "memfs": "^4.47.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/academic-explorer/academic-explorer.git",
    "directory": "packages/client"
  },
  "bugs": {
    "url": "https://github.com/academic-explorer/academic-explorer/issues"
  },
  "homepage": "https://github.com/academic-explorer/academic-explorer/tree/main/packages/client#readme"
}
