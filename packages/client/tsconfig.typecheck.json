{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": false,
    "declaration": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
    "moduleResolution": "bundler",
    "paths": {
      "@academic-explorer/types": ["../types/src/index.ts"],
      "@academic-explorer/types/*": ["../types/src/*"],
      "@academic-explorer/utils": ["../utils/src/index.ts"],
      "@academic-explorer/utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/test-generator/**/*"]
}
