{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
    "paths": {
      "@academic-explorer/utils": ["../utils/dist/index.d.ts"],
      "@academic-explorer/types": ["../types/src/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/test-generator/**/*"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ]
}
