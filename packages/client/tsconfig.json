{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "eslint.config.ts",
    "tsup.config.ts",
    "vitest.config.ts"
