{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "build:compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{workspaceRoot}/config/**/*"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build:bundle": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:compile"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "{projectRoot}/tsup.config.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build": {
      "dependsOn": ["build:bundle"]
    },

    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:unit", "test:integration"],
      "options": {
        "command": "echo 'All client tests completed successfully'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "unit",
        "coverage": true
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:integration": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "integration"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },

    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {
      "cache": true,
      "dependsOn": ["build", "test", "lint"],
      "inputs": [
        "production",
        "{projectRoot}/tsup.config.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "source",
        "tests",
        "configs",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts"
      ],
      "outputs": []
    },
    "lint": {}
  },
  "tags": ["type:library", "scope:openalex", "layer:core"]
}
