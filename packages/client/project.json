{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "barrelsby": {
      "executor": "nx:run-commands",
      "options": {
        "command": "barrelsby --config ../../.barrelsby.json --directory ./src",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "assets": []
      },
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "format": [
          "esm",
          "cjs"
        ],
        "compiler": "tsc",
        "generateExportsField": false,
        "project": "packages/client/package.json",
        "watch": true,
        "skipTypeCheck": true,
        "sourcemap": "inline",
        "additionalEntryPoints": [
          "packages/client/src/client.ts",
          "packages/client/src/types.ts"
        ]
      },
      "cache": false
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "tsc --noEmit -p tsconfig.typecheck.json",
        "cwd": "packages/client"
      }
    },
    "test:unit": {},
    "test:component": {},
    "test:integration": {}
  },
  "tags": [
    "type:library",
    "scope:openalex",
    "layer:core"
  ]
}
