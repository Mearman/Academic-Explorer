{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": ["types:build", "build:bundle"]
    },
    "build:compile": {
      "dependsOn": ["types:build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "^production",
        "^outputs",
        "{workspaceRoot}/vite.config.base.ts",
        "{workspaceRoot}/config/**/*"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build:bundle": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:compile"],
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "{projectRoot}/tsup.config.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },

    "test": {
      "dependsOn": ["test:aggregate"]
    },

    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {},
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_OPTIONS='--import tsx' eslint --no-warn-ignored 'src/**/*.{ts,tsx}' --ignore-pattern 'src/**/*.{test,spec}.{ts,tsx}' --fix",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "source",
        "configs",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts"
      ],
      "outputs": [
        "{workspaceRoot}/.nx/cache/lint-results/{projectName}.json",
        "{projectRoot}/**/*.{js,jsx,ts,tsx}"
      ],
      "cache": true
    }
  },
  "tags": ["type:library", "scope:openalex", "layer:core"]
}
