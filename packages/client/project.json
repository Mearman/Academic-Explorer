{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "build:bundle": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "format": ["esm", "cjs"],
        "compiler": "tsc",
        "generateExportsField": false,
        "project": "packages/client/package.json",
        "additionalEntryPoints": [
          "packages/client/src/client.ts",
          "packages/client/src/types.ts"
        ]
      }
    },
    "build:types": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "skipLibCheck": true
      }
    },
    "build:fix-paths": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:bundle", "build:types"],
      "options": {
        "command": "node packages/client/scripts/fix-dist-paths.cjs"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build:fix-paths"],
      "options": {
        "commands": [],
        "outputPath": "packages/client/dist"
      }
    },
    "dev": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "format": ["esm", "cjs"],
        "compiler": "tsc",
        "generateExportsField": false,
        "project": "packages/client/package.json",
        "watch": true,
        "additionalEntryPoints": [
          "packages/client/src/client.ts",
          "packages/client/src/types.ts"
        ]
      },
      "cache": false
    }
  },
  "tags": ["type:library", "scope:openalex", "layer:core"]
}
