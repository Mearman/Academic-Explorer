{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "tags": ["type:library", "scope:openalex", "layer:core"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "configFile": "packages/client/vite.config.ts",
        "outputPath": "packages/client/dist"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "main": "packages/client/src/index.ts",
        "outputPath": "packages/client/dist",
        "tsConfig": "packages/client/tsconfig.json",
        "format": ["esm", "cjs"],
        "compiler": "tsc",
        "generateExportsField": false,
        "project": "packages/client/package.json",
        "watch": true,
        "skipTypeCheck": true,
        "sourcemap": "inline",
        "additionalEntryPoints": [
          "packages/client/src/client.ts",
          "packages/client/src/types.ts"
        ]
      },
      "cache": false
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "prepublishOnly": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run client:clean",
          "nx run client:build",
          "nx run client:test"
        ],
        "parallel": false
      }
    }
  }
}
