{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b && tsup",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "{projectRoot}/tsup.config.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src/**/*.ts",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src/**/*.ts --fix",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:unit", "test:integration"],
      "options": {
        "command": "echo 'All client tests completed successfully'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "client-unit",
        "coverage": true
      },
  "inputs": ["default", "^production", "{workspaceRoot}/vite.config.base.ts", "{projectRoot}/vitest.config.ts"],
  "outputs": ["{projectRoot}/coverage"],
  "cache": true
},
"test:integration": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "client-integration"
      },
  "inputs": ["default", "^production", "{workspaceRoot}/vite.config.base.ts", "{projectRoot}/vitest.config.ts"],
  "outputs": ["{projectRoot}/coverage"],
  "cache": true
},
"test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  },
  "tags": ["type:library", "scope:openalex", "layer:core"]
}
