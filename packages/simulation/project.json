{
  "name": "simulation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/simulation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "tsc -b",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },

    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {}
