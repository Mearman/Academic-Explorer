{
  "name": "@academic-explorer/ui",
  "version": "8.2.1",
  "type": "module",
  "description": "Reusable UI components for Academic Explorer built with Mantine and XYFlow",
  "keywords": [
    "ui",
    "components",
    "react",
    "mantine",
    "xyflow",
    "academic",
    "research",
    "typescript"
  ],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "packages/ui"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./components/ViewToggle": {
      "types": "./dist/components/ViewToggle.d.ts",
      "import": "./dist/components/ViewToggle.js"
    },
    "./components/entity-views": {
      "types": "./dist/components/entity-views/index.d.ts",
      "import": "./dist/components/entity-views/index.js"
    },
    "./components/entity-views/matchers/index": {
      "types": "./dist/components/entity-views/matchers/index.d.ts",
      "import": "./dist/components/entity-views/matchers/index.js"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.dev.ts",
    "build:prod": "vite build --configLoader runner",
    "build:dev": "vite build --config vite.config.dev.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsc -b --watch",
    "storybook": "storybook dev -p 6006",
    "dev:vite": "vite --configLoader runner",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-table": "^8.21.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "peerDependencies": {
    "@mantine/core": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "@mantine/notifications": "^8.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "eslint": "^9.36.0",
    "react": "^19.2.0",
    "storybook": "^8.6.14",
    "typescript": "~5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "peerDependenciesMeta": {
    "@mantine/notifications": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
