{
  "name": "@academic-explorer/ui",
  "description": "Reusable UI components for Academic Explorer built with Mantine and XYFlow",
  "version": "0.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "build": "nx run ui:build",
    "build-storybook": "nx run ui:build-storybook",
    "clean": "nx run ui:clean",
    "dev": "nx run ui:dev",
    "lint": "nx run ui:lint",
    "storybook": "nx run ui:storybook",
    "test": "nx run ui:test",
    "test:component": "nx run ui:test:component",
    "test:integration": "nx run ui:test:integration",
    "test:unit": "nx run ui:test:unit",
    "test:watch": "nx run ui:test:watch",
    "typecheck": "nx run ui:typecheck"
  },
  "dependencies": {
    "@academic-explorer/types": "workspace:*",
    "@tabler/icons-react": "3.35.0",
    "@tanstack/react-table": "8.21.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@mantine/core": "8.3.9",
    "@mantine/hooks": "8.3.9",
    "@mantine/notifications": "8.3.9",
    "@storybook/addon-docs": "10.1.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vanilla-extract/vite-plugin": "5.1.1",
    "eslint": "9.39.1",
    "eslint-plugin-storybook": "10.1.0",
    "react": "19.2.0",
    "storybook": "10.1.0",
    "typescript": "5.9.2",
    "vite": "7.2.4",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.10"
  },
  "peerDependencies": {
    "@mantine/core": "8.3.9",
    "@mantine/hooks": "8.3.9",
    "@mantine/notifications": "8.3.9",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "author": "Joe Mearman",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "source": "./src/index.ts"
    },
    "./components/ViewToggle": {
      "types": "./dist/components/ViewToggle.d.ts",
      "import": "./dist/components/ViewToggle.js",
      "source": "./src/components/ViewToggle.tsx"
    },
    "./components/entity-views": {
      "types": "./dist/components/entity-views/index.d.ts",
      "import": "./dist/components/entity-views/index.js",
      "source": "./src/components/entity-views/index.ts"
    },
    "./components/entity-views/matchers/index": {
      "types": "./dist/components/entity-views/matchers/index.d.ts",
      "import": "./dist/components/entity-views/matchers/index.js",
      "source": "./src/components/entity-views/matchers/index.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "academic",
    "components",
    "mantine",
    "react",
    "research",
    "typescript",
    "ui",
    "xyflow"
  ],
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "nx": {
    "includedScripts": []
  },
  "peerDependenciesMeta": {
    "@mantine/notifications": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts"
}
