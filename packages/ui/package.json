{
  "name": "@academic-explorer/ui",
  "version": "8.2.1",
  "type": "module",
  "description": "Reusable UI components for Academic Explorer built with Mantine and XYFlow",
  "keywords": [
    "ui",
    "components",
    "react",
    "mantine",
    "xyflow",
    "academic",
    "research",
    "typescript"
  ],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "packages/ui"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./graph": {
      "import": "./dist/graph/index.js",
      "types": "./dist/graph/index.d.ts"
    },
    "./tables": {
      "import": "./dist/tables/index.js",
      "types": "./dist/tables/index.d.ts"
    },
    "./forms": {
      "import": "./dist/forms/index.js",
      "types": "./dist/forms/index.d.ts"
    },
    "./layout": {
      "import": "./dist/layout/index.js",
      "types": "./dist/layout/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b && vite build --configLoader runner",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsc -b --watch",
    "storybook": "storybook dev -p 6006",
    "dev:vite": "vite --configLoader runner",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@academic-explorer/client": "workspace:*",
    "@academic-explorer/graph": "workspace:*",
    "@tanstack/react-table": "^8.21.3"
  },
  "peerDependencies": {
    "@mantine/core": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "@mantine/notifications": "^8.3.1",
    "@tabler/icons-react": "^3.35.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "eslint": "^9.36.0",
    "storybook": "^8.6.14",
    "typescript": "~5.9.2",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "peerDependenciesMeta": {
    "@mantine/notifications": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
