{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "targets": {
    "barrelsby": {
      "executor": "nx:run-commands",
      "options": {
        "command": "barrelsby --config ../../.barrelsby.json --directory ./src",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "configFile": "packages/ui/vite.config.ts",
        "outputPath": "packages/ui/dist"
      },
      "dependsOn": [
        "types:build",
        "utils:build"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/ui"
      },
      "dependsOn": [
        "types:build",
        "utils:build"
      ]
    },
    "test:unit": {},
    "test:component": {},
    "test:integration": {}
  },
  "tags": [
    "type:library",
    "scope:ui",
    "layer:ui"
  ]
}
