{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "vite build --config vite.config.dev.ts",
        "cwd": "packages/ui"
      },
      "dependsOn": ["types:build", "utils:build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'UI package uses Vite for type checking during build'"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["type:library", "scope:ui", "layer:ui"]
}
