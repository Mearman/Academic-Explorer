{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/ui/section-kit": ["./src/components/section-kit"],
      "@academic-explorer/types": ["../types/src/index.ts"],
      "@academic-explorer/utils": ["../utils/src/index.ts"],
      "@academic-explorer/client": ["../client/src/index.ts"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    }
  ]
}
