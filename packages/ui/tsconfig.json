{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/ui/section-kit": ["./src/components/section-kit"]
    },
    "declaration": true,
    "composite": true,
    "module": "ESNext",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["react", "react-dom"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*", "../../types/**/*"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../client" },
    { "path": "../graph" }
  ]
}
