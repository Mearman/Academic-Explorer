{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/ui/section-kit": ["./src/components/section-kit"],
      "@academic-explorer/types": ["../types/dist/index.d.ts"],
      "@academic-explorer/utils": ["../utils/dist/index.d.ts"],
      "@academic-explorer/client": ["../client/dist/index.d.ts"],
      "@academic-explorer/graph": ["../graph/dist/index.d.ts"]
    },
    "types": [],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx", "src/test/**/*"],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    }
  ]
}
