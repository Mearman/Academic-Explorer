{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": false,
    "declaration": false,
    "paths": {
      "@/ui/section-kit": ["./src/components/section-kit"],
      "@academic-explorer/types": ["../types/src/index.ts"],
      "@academic-explorer/utils": ["../utils/src/index.ts"],
      "@academic-explorer/client": ["../client/src/index.ts"]
    },
    "types": ["node"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
