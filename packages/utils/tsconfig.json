{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": []
  },
  "include": ["src/**/*", "../../types/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "src/storage/**/*"
  ],
  "references": [
    { "path": "../types" }
  ]
}
