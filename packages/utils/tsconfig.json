{
  "extends": "../../tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": []
  },
  "include": ["src/cache/**/*", "src/environment/**/*", "src/build-info.ts", "src/date-helpers.ts", "src/entity-type-inference.ts", "src/logger.ts", "src/normalize-route.ts", "src/query-parser.ts", "src/services.ts", "src/validation.ts", "src/utils.unit.test.ts", "src/utils.integration.test.ts", "../../types/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../types" }
  ]
}
