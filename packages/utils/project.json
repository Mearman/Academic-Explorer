{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "pnpm build"
      },
      "dependsOn": ["types:build"]
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "outputs": [],
      "options": {
        "tsConfig": "packages/utils/tsconfig.json",
        "outputPath": "packages/utils/dist"
      },
      "dependsOn": ["types:build"]
    }
  },
  "tags": ["type:library", "scope:shared", "type:util"]
}
