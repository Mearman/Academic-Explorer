{
  "name": "algorithms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/algorithms/src",
  "projectType": "library",
  "tags": ["type:library", "scope:algorithms"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "configFile": "packages/algorithms/vite.config.ts",
        "outputPath": "packages/algorithms/dist"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "reportsDirectory": "{projectRoot}/coverage"
      },
      "dependsOn": ["typecheck"]
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {}
  }
}
