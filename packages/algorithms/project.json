{
  "name": "algorithms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/algorithms/src",
  "projectType": "library",
  "tags": ["type:library", "scope:algorithms"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "configFile": "packages/algorithms/vite.config.ts",
        "outputPath": "packages/algorithms/dist"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "reportsDirectory": "{projectRoot}/coverage"
      },
      "dependsOn": ["typecheck"]
    }
  }
}
