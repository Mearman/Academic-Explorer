{
  "name": "algorithms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/algorithms/src",
  "projectType": "library",
  "tags": ["type:package", "scope:algorithms"],
  "targets": {
    "barrelsby": {},
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "configFile": "packages/algorithms/vite.config.ts",
        "outputPath": "packages/algorithms/dist"
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "reportsDirectory": "{projectRoot}/coverage"
      },
      "dependsOn": ["typecheck"]
    },
    "test:watch": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "watch": true
      }
    },
    "typecheck": {},
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/algorithms/src/**/*.ts"]
      }
    }
  }
}
