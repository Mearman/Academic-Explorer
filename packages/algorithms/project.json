{
  "name": "algorithms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/algorithms/src",
  "projectType": "library",
  "tags": ["type:package", "scope:algorithms"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "vite build",
        "cwd": "packages/algorithms"
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "reportsDirectory": "{projectRoot}/coverage"
      },
      "dependsOn": ["typecheck"]
    },
    "test:watch": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "packages/algorithms/vitest.config.ts",
        "watch": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/algorithms"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.base.json"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/algorithms/src/**/*.ts"]
      }
    }
  }
}
