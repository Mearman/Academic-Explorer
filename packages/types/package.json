{
  "name": "@academic-explorer/types",
  "version": "1.0.0",
  "type": "module",
  "description": "Type definitions, schemas, and type guards for Academic Explorer",
  "keywords": [
    "types",
    "entities",
    "schemas",
    "type-guards",
    "academic",
    "research",
    "typescript",
    "zod"
  ],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "packages/types"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./entities": {
      "import": "./dist/entities/index.js",
      "types": "./dist/entities/index.d.ts"
    },
    "./entities/schemas": {
      "import": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    },
    "./entities/type-guards": {
      "import": "./dist/type-guards.js",
      "types": "./dist/type-guards.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsc -b --watch"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
