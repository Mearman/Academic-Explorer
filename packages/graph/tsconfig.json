{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "dist", "node_modules"],
  "references": [
    { "path": "../utils" }
  ]
}