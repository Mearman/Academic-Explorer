{
  "name": "graph",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/graph/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "source",
        "configs",
        "^production",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/config/**/*"
      ],
      "outputs": ["{projectRoot}/dist/tsc"],
      "cache": true
    },
    "typecheck:all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.typecheck.json",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "source",
        "configs",
        "^production",
        "{workspaceRoot}/tsconfig*.json",
        "{workspaceRoot}/config/**/*"
      ],
      "outputs": ["{projectRoot}/dist/tsc"],
      "cache": true
    },

    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {
      "cache": true,
      "dependsOn": ["build", "test", "lint"],
      "inputs": [
        "production",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "source",
        "tests",
        "configs",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts"
      ],
      "outputs": []
    },
    "lint": {}
  },
  "tags": ["type:library", "scope:graph", "layer:core"]
}
