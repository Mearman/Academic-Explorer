{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "module": "ESNext",
    "skipLibCheck": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@academic-explorer/graph": ["../../packages/graph/src/index.ts"],
      "@academic-explorer/graph/*": ["../../packages/graph/src/*"],
      "@academic-explorer/utils": ["../../packages/utils/src/index.ts"],
      "@academic-explorer/utils/*": ["../../packages/utils/src/*"],
      "@academic-explorer/simulation": [
        "../../packages/simulation/src/index.ts"
      ],
      "@academic-explorer/simulation/*": ["../../packages/simulation/src/*"],
      "@academic-explorer/ui": ["../../packages/ui/src/index.ts"],
      "@academic-explorer/ui/*": ["../../packages/ui/src/*"],
      "@academic-explorer/ui/components/ViewToggle": [
        "../../packages/ui/src/components/ViewToggle/index.ts"
      ],
      "@academic-explorer/ui/components/entity-views": [
        "../../packages/ui/src/components/entity-views/index.ts"
      ]
    },

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*",
    "src/build-plugins/**/*"
  ],
  "references": [
    { "path": "../../packages/graph" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/simulation" },
    { "path": "../../packages/client" },
    { "path": "../../packages/ui" }
  ]
}
