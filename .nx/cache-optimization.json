{
  "version": "2.0",
  "description": "Nx cache optimization configuration for CI/CD",
  "settings": {
    "cacheCompression": true,
    "cacheDirectory": ".nx/cache",
    "workspaceDataDirectory": ".nx/workspace-data",
    "installationDirectory": ".nx/installation",
    "daemonEnabled": true,
    "parallelTasks": 4,
    "cacheEvictionPolicy": {
      "maxAge": "7d",
      "maxSize": "2GB",
      "strategy": "lru"
    }
  },
  "optimization": {
    "inputs": {
      "excludePatterns": [
        "**/*.log",
        "**/*.tmp",
        "**/*.temp",
        "**/coverage/**",
        "**/.nx/cache/**",
        "**/node_modules/.cache/**",
        "**/.DS_Store",
        "**/Thumbs.db"
      ]
    },
    "outputs": {
      "compressionLevel": 6,
      "preserveSymlinks": false
    },
    "corruption": {
      "preventionEnabled": true,
      "validationEnabled": true,
      "checksumValidation": true
    }
  },
  "ci": {
    "separateWorkspaceCache": true,
    "taskCacheStrategy": "run-specific",
    "workspaceCacheStrategy": "branch-specific",
    "compressionEnabled": true,
    "parallelCacheSave": false,
    "cacheRestoreOrder": [
      "exact-match",
      "partial-key-match",
      "fallback-pattern"
    ]
  }
}