{
  "name": "@academic-explorer/web",
  "version": "0.0.0",
  "type": "module",
  "description": "Academic Explorer Web App - React SPA for OpenAlex API exploration",
  "keywords": [
    "academic",
    "research",
    "openalex",
    "react",
    "vite",
    "tanstack-router"
  ],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "apps/web"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest --coverage",
    "test:component": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite"
  },
  "dependencies": {
    "@academic-explorer/client": "workspace:*",
    "@academic-explorer/graph": "workspace:*",
    "@academic-explorer/simulation": "workspace:*",
    "@academic-explorer/types": "workspace:*",
    "@academic-explorer/ui": "workspace:*",
    "@academic-explorer/utils": "workspace:*",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mantine/core": "^8.3.2",
    "@mantine/dates": "^8.3.2",
    "@mantine/hooks": "^8.3.2",
    "@mantine/modals": "^8.3.6",
    "@mantine/notifications": "^8.3.2",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "^1.133.32",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/qrcode": "^1.5.6",
    "@xyflow/react": "^12.8.5",
    "dexie": "^4.2.1",
    "qrcode": "^1.5.4",
    "r3f-forcegraph": "^1.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-force-graph-2d": "^1.29.0",
    "react-force-graph-3d": "^1.29.0",
    "three": "^0.180.0",
    "three-spritetext": "^1.10.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@tanstack/router-vite-plugin": "^1.133.36",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.180.0",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "fake-indexeddb": "^6.2.4",
    "history": "^5.3.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "vite": "^7.2.2",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
