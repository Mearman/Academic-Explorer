{
  "name": "@academic-explorer/web",
  "version": "8.1.0",
  "type": "module",
  "description": "Academic Explorer Web App - React SPA for OpenAlex API exploration",
  "keywords": ["academic", "research", "openalex", "react", "vite", "tanstack-router"],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "apps/web"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --project=unit --project=component --coverage",
    "test:unit": "vitest --project=unit --coverage",
    "test:component": "vitest --project=component",
    "test:e2e": "vitest --project=e2e",
    "test:watch": "vitest --watch --project=unit --project=component --coverage",
    "clean": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite"
  },
  "dependencies": {
    "@academic-explorer/graph": "workspace:*",
    "@academic-explorer/shared-utils": "workspace:*",
    "@academic-explorer/simulation": "workspace:*",
    "@academic-explorer/openalex-client": "workspace:*",
    "@academic-explorer/ui-components": "workspace:*",
    "@mantine/core": "^7.15.2",
    "@mantine/hooks": "^7.15.2",
    "@mantine/notifications": "^7.15.2",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-persist-client": "^5.89.0",
    "@tanstack/react-router": "^1.131.50",
    "@xyflow/react": "^12.6.1",
    "fuse.js": "^7.0.0",
    "idb": "^8.0.2",
    "immer": "^10.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-intersection-observer": "^9.13.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.3",
    "@tanstack/react-devtools": "^0.6.10",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@tanstack/react-router-devtools": "^1.131.50",
    "@tanstack/router-plugin": "^1.131.50",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^4.0.17",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "eslint": "^9.36.0",
    "jsdom": "^25.0.1",
    "msw": "^2.6.3",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^2.1.5"
  }
}