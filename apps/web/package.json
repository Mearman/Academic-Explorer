{
  "name": "@academic-explorer/web",
  "version": "8.1.0",
  "type": "module",
  "description": "Academic Explorer Web App - React SPA for OpenAlex API exploration",
  "keywords": [
    "academic",
    "research",
    "openalex",
    "react",
    "vite",
    "tanstack-router"
  ],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "apps/web"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --project=unit --project=component --coverage",
    "test:unit": "vitest --project=unit --coverage",
    "test:component": "vitest --project=component",
    "test:e2e": "echo 'E2E tests disabled - no test files exist. Skipping E2E test execution.'",
    "test:watch": "vitest --watch --project=unit --project=component --coverage",
    "clean": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite"
  },
  "dependencies": {
    "@academic-explorer/client": "workspace:*",
    "@academic-explorer/graph": "workspace:*",
    "@academic-explorer/simulation": "workspace:*",
    "@academic-explorer/utils": "workspace:*",
    "@mantine/core": "^8.3.2",
    "@mantine/dates": "^8.3.2",
    "@mantine/hooks": "^8.3.2",
    "@mantine/notifications": "^8.3.2",
    "@mantine/spotlight": "^8.3.2",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "^1.132.2",
    "@tanstack/react-table": "^8.21.3",
    "@xyflow/react": "^12.8.5",
    "immer": "^10.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router-devtools": "^1.132.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/css": "^1.17.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
}