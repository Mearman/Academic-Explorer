{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.config.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@bibgraph/utils": ["../../packages/utils/src/index.ts"],
      "@bibgraph/utils/*": ["../../packages/utils/src/*"],
      "@bibgraph/client": ["../../packages/client/src/index.ts"],
      "@bibgraph/client/*": ["../../packages/client/src/*"],
      "@bibgraph/ui": ["../../packages/ui/src/index.ts"],
      "@bibgraph/ui/*": ["../../packages/ui/src/*"]
    },

    /* Linting - More lenient for config files */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": false,
    "noImplicitAny": false,
    "noImplicitReturns": false
  },
    "include": [
    "*.config.ts",
    "*.config.js",
    "vite.config.base.ts",
    "vitest.config.ts",
    "eslint.config.ts",
    "playwright.config.ts",
    "knip.ts",
    "project.json",
    "src/build-plugins/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*",
    "!src/build-plugins/**/*"
  ]
}
