{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/*"],
      /* Workspace paths for intra-repo dependencies - relative to web app */
      "@academic-explorer/client": ["../../packages/client/src/index.ts"],
      "@academic-explorer/utils": ["../../packages/utils/src/index.ts"],
      "@academic-explorer/ui": ["../../packages/ui/src/index.ts"],
      "@academic-explorer/graph": ["../../packages/graph/src/index.ts"],
      "@academic-explorer/simulation": ["../../packages/simulation/src/index.ts"],
      "@academic-explorer/types": ["../../packages/types/src/index.ts"]
    }
  },
  "include": [
    "src",
    "*.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "../../vite.config.base.ts",
    "../../vitest.config.base.ts",
    "eslint.config.ts",
    "knip.ts",
    "playwright.config.ts",
    "config/**/*",
    "../../config/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*",
    "src/build-plugins/**/*",
    "packages/shared-utils/src/openalex/debug-types.ts",
    "packages/shared-utils/src/openalex/test-advanced-fields.ts",
    "src/scripts/environmental-prisma-search-fixed.ts",
    "src/scripts/environmental-prisma-search.ts",
    "src/scripts/find-non-prisma-equivalents.ts",
    "src/__tests__",
    "config/test-utils/**/*",
    "../../config/test-utils/**/*"
  ],
  "references": [
    { "path": "../../packages/client" },
    { "path": "../../packages/graph" },
    { "path": "../../packages/simulation" },
    { "path": "../../packages/types" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/utils" }
  ]
}