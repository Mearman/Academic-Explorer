{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "*.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.ts",
    "knip.ts",
    "playwright.config.ts",
    "config/**/*",
    "../../config/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*",
    "src/build-plugins/**/*",
    "packages/shared-utils/src/openalex/debug-types.ts",
    "packages/shared-utils/src/openalex/test-advanced-fields.ts",
    "src/scripts/environmental-prisma-search-fixed.ts",
    "src/scripts/environmental-prisma-search.ts",
    "src/scripts/find-non-prisma-equivalents.ts",
    "src/__tests__",
    "config/test-utils/**/*",
    "../../config/test-utils/**/*"
  ],
  "references": [
    { "path": "../../packages/client" },
    { "path": "../../packages/graph" },
    { "path": "../../packages/simulation" },
    { "path": "../../packages/types" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/utils" }
  ]
}