{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": [
    "packages/shared-utils/src/openalex/debug-types.ts",
    "packages/shared-utils/src/openalex/test-advanced-fields.ts",
    "src/scripts/environmental-prisma-search-fixed.ts",
    "src/scripts/environmental-prisma-search.ts",
    "src/scripts/find-non-prisma-equivalents.ts",
    "src/build-plugins",
    "**/*.test.*",
    "**/*.spec.*",
    "src/__tests__"
  ]
  "exclude": [
    "packages/shared-utils/src/openalex/debug-types.ts",
    "packages/shared-utils/src/openalex/test-advanced-fields.ts",
    "src/scripts/environmental-prisma-search-fixed.ts",
    "src/scripts/environmental-prisma-search.ts",
    "src/scripts/find-non-prisma-equivalents.ts",
    "src/build-plugins"
  ]
}
