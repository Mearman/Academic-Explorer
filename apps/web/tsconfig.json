{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "e2e/**/*",
    "test/**/*",
    "config/**/*",
    "../../config/**/*",
    "vite.config.ts",
    "vite.config.minimal.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "playwright.config.ts",
    "playwright.global-setup.ts",
    "playwright.global-teardown.ts",
    "../../vite.config.base.ts",
    "../../vitest.config.base.ts",
    "../../scripts/extract-openalex-paths.ts"
  ],
  "exclude": [
    "../../config/test-utils/render-helpers.tsx"
  ],
  "references": [
    { "path": "../../packages/client" },
    { "path": "../../packages/types" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/utils" }
  ]
}
