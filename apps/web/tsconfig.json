{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": false,
    "declaration": false,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "vitest"],
    "paths": {
      "@/*": ["src/*"],
      "@academic-explorer/types": ["../../packages/types/src/index.ts"],
      "@academic-explorer/types/*": ["../../packages/types/src/*"],
      "@academic-explorer/client": ["../../packages/client/src/index.ts"],
      "@academic-explorer/client/*": ["../../packages/client/src/*"],
      "@academic-explorer/utils": ["../../packages/utils/src/index.ts"],
      "@academic-explorer/utils/*": ["../../packages/utils/src/*"],
      "@academic-explorer/ui": ["../../packages/ui/src/index.ts"],
      "@academic-explorer/ui/*": ["../../packages/ui/src/*"],
      "@academic-explorer/algorithms": ["../../packages/algorithms/src/index.ts"],
      "@academic-explorer/algorithms/*": ["../../packages/algorithms/src/*"]
    }
  },
  "include": [
    "src",
    "e2e/**/*",
    "test/**/*",
    "config/**/*",
    "../../config/**/*",
    "vite.config.ts",
    "vite.config.minimal.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "playwright.config.ts",
    "playwright.global-setup.ts",
    "playwright.global-teardown.ts",
    "../../vite.config.base.ts",
    "../../vitest.config.base.ts",
    "../../scripts/extract-openalex-paths.ts"
  ],
  "exclude": [
    "../../config/test-utils/render-helpers.tsx"
  ]
}
