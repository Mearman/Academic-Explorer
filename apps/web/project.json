{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web",
        "root": "apps/web"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web:build",
        "configFile": "apps/web/vite.config.ts"
      },
      "configurations": {
        "development": {
          "buildTarget": "web:build:development"
        },
        "production": {
          "buildTarget": "web:build:production",
          "mode": "production"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Use \"nx serve web\" instead of \"nx dev web\" for better performance and modern setup'",
        "cwd": "{projectRoot}"
      }
    },
    "test:e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": true,
      "dependsOn": ["build"],
      "inputs": [
        "{projectRoot}/e2e/**/*",
        "{projectRoot}/src/test/**/*",
        "{projectRoot}/playwright.config.ts",
        "^production"
      ],
      "options": {
        "config": "apps/web/playwright.config.ts"
      }
    },
    "test:e2e:headed": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "headed": true
      }
    },
    "test:e2e:ui": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "ui": true
      }
    },
    "test:e2e:changed": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm playwright test --only-changed --config playwright.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test:e2e:changed:ci": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm playwright test --only-changed=origin/${GITHUB_BASE_REF:-main} --config playwright.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "a11y": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx preview web > /dev/null 2>&1 &",
          "sleep 5",
          "SERVER_PID=$!",
          "pa11y-ci --config {projectRoot}/.pa11yci.json || PA11Y_EXIT=$?",
          "kill $SERVER_PID 2>/dev/null || true",
          "wait $SERVER_PID 2>/dev/null || true",
          "exit ${PA11Y_EXIT:-0}"
        ],
        "parallel": false
      },
      "dependsOn": ["build"],
      "cache": false
    },
    "a11y:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pa11y-ci --config {projectRoot}/.pa11yci-dev.json"
      },
      "cache": false
    },
    "lighthouse": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx preview web &",
          "sleep 5",
          "lhci autorun"
        ],
        "parallel": false,
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"],
      "cache": false
    },
    "test:accessibility": {
      "executor": "nx:noop",
      "dependsOn": ["a11y"],
      "cache": false
    },
    "test:accessibility:dev": {
      "executor": "nx:noop",
      "dependsOn": ["a11y:dev"],
      "cache": false
    },
    "test:performance": {
      "executor": "nx:noop",
      "dependsOn": ["lighthouse"],
      "cache": false
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
