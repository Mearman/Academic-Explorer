{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      }
    },
    "barrelsby": {
      "executor": "nx:run-commands",
      "options": {
        "command": "barrelsby --config ../../.barrelsby.json --directory ./src/components",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx serve web --watch"
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "options": {
        "config": "apps/web/playwright.config.ts"
      }
    },
    "e2e:headed": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "headed": true
      }
    },
    "e2e:ui": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "ui": true
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
