{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vite",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vite build",
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.base.ts",
        "{projectRoot}/index.html",
        "{projectRoot}/public/**/*"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "cache": true
    },
    "typecheck:all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.typecheck.json",
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --max-warnings=100",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --fix",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:unit", "test:component", "test:e2e"],
      "options": {
        "command": "echo 'All scoped tests completed successfully'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "{workspaceRoot}/vite.config.base.ts",
        "project": "unit",
        "coverage": true
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vitest.workspace.ts",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:component": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "{workspaceRoot}/vite.config.base.ts",
        "include": "src/**/*.component.test.{ts,tsx}"
      },
      "cache": true
    },

    "test:e2e": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "{projectRoot}/playwright.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true
        }
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ../../scripts/with-cleanup.ts vitest --watch --project=unit --project=component --coverage",
        "cwd": "{projectRoot}"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "tsx ../../scripts/with-cleanup.ts vite preview",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "verify": {
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "lint", "test", "build"],
      "options": {
        "commands": [
          "echo 'âœ… TypeScript checking passed'",
          "echo 'âœ… Linting passed'",
          "echo 'âœ… Tests passed'",
          "echo 'âœ… Build completed successfully'",
          "echo 'ðŸŽ‰ All quality checks passed!'"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
