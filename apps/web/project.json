{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "dev": "dev:app",
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vite build",
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.base.ts",
        "{projectRoot}/index.html",
        "{projectRoot}/public/**/*"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "typecheck": "typecheck",

    "lint": {
      "options": {
        "command": "NODE_OPTIONS='--import tsx' eslint --no-warn-ignored **/*.{ts,tsx,js} --fix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:e2e"],
      "options": {
        "command": "echo 'All scoped tests completed successfully'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run src/**/*.unit.test.{ts,tsx} --exclude='**/*.e2e.test.ts' --exclude='**/*.integration.test.ts' --exclude='**/*.integration.test.tsx' --exclude='**/*.component.test.{ts,tsx}'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:component": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:unit"],
      "options": {
        "command": "vitest run src/**/*.component.test.{ts,tsx} --exclude='**/*.e2e.test.ts' --exclude='**/*.integration.test.ts' --exclude='**/*.integration.test.tsx'",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "source",
        "tests",
        "configs",
        "^production",
        "{workspaceRoot}/config/**/*"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },

    "test:e2e": {
      "executor": "@nx/playwright:playwright",
      "dependsOn": ["test:component"],
      "options": {
        "config": "{projectRoot}/playwright.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true
        }
      },
      "inputs": [
        "source",
        "tests",
        "configs",
        "^production",
        "{workspaceRoot}/config/**/*",
        "{workspaceRoot}/playwright.config.ts"
      ],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ../../scripts/with-cleanup.ts vitest --watch --project=unit --project=component --coverage",
        "cwd": "{projectRoot}"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "tsx ../../scripts/with-cleanup.ts vite preview",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{workspaceRoot}/config/**/*"
      ],
      "cache": true
    },
    "verify": {
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "lint", "test", "build"],
      "options": {
        "commands": [
          "echo 'âœ… TypeScript checking passed'",
          "echo 'âœ… Linting passed'",
          "echo 'âœ… Tests passed'",
          "echo 'âœ… Build completed successfully'",
          "echo 'ðŸŽ‰ All quality checks passed!'"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      },
      "inputs": [],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "validate": {
      "cache": true,
      "dependsOn": ["build", "test", "lint"],
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vite.config.base.ts",
        "{projectRoot}/index.html",
        "{projectRoot}/public/**/*",
        "source",
        "tests",
        "configs",
        "{workspaceRoot}/eslint.config.ts",
        "{workspaceRoot}/eslint.config.*.ts"
      ],
      "outputs": []
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
