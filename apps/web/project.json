{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "barrelsby": {
      "executor": "nx:run-commands",
      "options": {
        "command": "barrelsby --config ../../.barrelsby.json --directory ./src/components",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx serve web --watch"
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "options": {
        "config": "apps/web/playwright.config.ts"
      },
      "dependsOn": ["build", "test:integration"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "tsc --noEmit -p tsconfig.json",
        "cwd": "apps/web"
      },
      "dependsOn": ["barrelsby", "^build"],
      "cache": true
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
