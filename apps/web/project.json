{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      }
    },
    "barrelsby": {
      "executor": "nx:run-commands",
      "options": {
        "command": "barrelsby --config ../../.barrelsby.json --directory ./src/components",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx serve web"
      }
    },
    "test:e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": true,
      "dependsOn": ["build"],
      "inputs": [
        "{projectRoot}/e2e/**/*",
        "{projectRoot}/src/test/**/*",
        "{projectRoot}/playwright.config.ts",
        "^production"
      ],
      "options": {
        "config": "apps/web/playwright.config.ts"
      }
    },
    "test:e2e:headed": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "headed": true
      }
    },
    "test:e2e:ui": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "config": "apps/web/playwright.config.ts",
        "ui": true
      }
    },
    "test:e2e:changed": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm playwright test --only-changed --config playwright.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test:e2e:changed:ci": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/test-results", "{projectRoot}/playwright-report"],
      "cache": false,
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm playwright test --only-changed=origin/${GITHUB_BASE_REF:-main} --config playwright.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "a11y": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx preview web &",
          "sleep 5",
          "pa11y-ci --config {projectRoot}/.pa11yci.json"
        ],
        "parallel": false
      },
      "dependsOn": ["build"],
      "cache": false
    },
    "a11y:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pa11y-ci --config {projectRoot}/.pa11yci-dev.json"
      },
      "cache": false
    },
    "lighthouse": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx preview web &",
          "sleep 5",
          "lhci autorun"
        ],
        "parallel": false,
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"],
      "cache": false
    },
    "test:accessibility": {
      "executor": "nx:noop",
      "dependsOn": ["a11y"],
      "cache": false
    },
    "test:accessibility:dev": {
      "executor": "nx:noop",
      "dependsOn": ["a11y:dev"],
      "cache": false
    },
    "test:performance": {
      "executor": "nx:noop",
      "dependsOn": ["lighthouse"],
      "cache": false
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
