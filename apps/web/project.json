{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vite",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "^build"],
      "options": {
        "commands": [
          "tsc -b",
          "vite build"
        ],
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}",
        "nodeOptions": ["--max-old-space-size=8192"]
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --fix",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vitest run --project=unit --project=component --coverage",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vitest run --project=unit --coverage",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test:component": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vitest run --project=component",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "vitest run --project=e2e",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vitest --watch --project=unit --project=component --coverage",
        "cwd": "{projectRoot}"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "vite preview",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "verify": {
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "lint", "test:unit", "build"],
      "options": {
        "commands": [
          "echo 'âœ… TypeScript checking passed'",
          "echo 'âœ… Linting passed'",
          "echo 'âœ… Unit tests passed'",
          "echo 'âœ… Build completed successfully'",
          "echo 'ðŸŽ‰ All quality checks passed!'"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  },
  "tags": ["type:app", "scope:web", "layer:app"]
}
