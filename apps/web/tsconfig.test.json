{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["@testing-library/jest-dom"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@bibgraph/utils": ["../../packages/utils/src/index.ts"],
      "@bibgraph/utils/*": ["../../packages/utils/src/*"],
      "@bibgraph/client": ["../../packages/client/dist/index.d.ts"],
      "@bibgraph/client/*": ["../../packages/client/dist/*"],
      "@bibgraph/ui": ["../../packages/ui/src/index.ts"],
      "@bibgraph/ui/*": ["../../packages/ui/src/*"]
    },

    /* Linting - Less strict for test files */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": false
  },
  "include": [
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/build-plugins/**/*",
    "playwright.config.ts"
  ]
}