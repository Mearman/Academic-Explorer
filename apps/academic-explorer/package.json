{
  "name": "academic-explorer",
  "version": "8.1.0",
  "type": "module",
  "description": "Academic Explorer - React SPA for OpenAlex API exploration with Vite + TanStack Router",
  "keywords": ["academic", "research", "openalex", "react", "vite", "tanstack-router"],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
    "directory": "apps/academic-explorer"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.app.json && vite build",
    "generate:static-indexes": "npx tsx scripts/generate-static-data-index.ts",
    "fetch:query-cache": "npx tsx scripts/fetch-query-cache.ts",
    "cache:queries": "npm run fetch:query-cache",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:nx": "tsx scripts/knip-nx.ts",
    "preview": "vite preview",
    "test": "vitest --project=unit --project=component --coverage",
    "test:watch": "vitest --watch --project=unit --project=component --coverage",
    "test:ui": "vitest --ui --project=unit --project=component --coverage",
    "test:unit": "vitest --project=unit --coverage",
    "test:unit:run": "vitest run --project=unit --coverage",
    "test:unit:watch": "vitest --watch --project=unit --coverage",
    "test:component": "vitest --project=component",
    "test:component:watch": "vitest --watch --project=component",
    "test:integration": "vitest --project=integration",
    "test:integration:run": "vitest run --project=integration",
    "test:integration:watch": "vitest --watch --project=integration",
    "test:e2e": "vitest --project=e2e",
    "test:e2e:watch": "vitest --watch --project=e2e",
    "test:e2e:ui": "vitest --project=e2e --ui",
    "test:e2e:headed": "HEADLESS=false vitest run --project=e2e",
    "verify": "nx verify",
    "verify:full": "nx verify:full",
    "verify:parallel": "nx verify:parallel",
    "clean": "rm -rf dist coverage .nx/cache .tanstack node_modules/.vite",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "hooks:install": "husky",
    "hooks:test": "npx lint-staged --diff-filter=A",
    "coverage:report": "node scripts/generate-coverage-report.js",
    "a11y:test": "nx a11y:test",
    "a11y:lighthouse": "nx a11y:lighthouse",
    "a11y:dev": "nx a11y:dev",
    "a11y:ci": "nx a11y:ci",
    "test:a11y": "nx test:a11y",
    "test:a11y:e2e": "nx test:a11y:e2e",
    "verify:a11y": "nx verify:a11y"
  },
  "dependencies": {
    "@academic-explorer/graph": "workspace:*",
    "@academic-explorer/shared-utils": "workspace:*",
    "@academic-explorer/simulation": "workspace:*",
    "@academic-explorer/openalex-client": "workspace:*",
    "@academic-explorer/ui-components": "workspace:*",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-persist-client": "^5.90.2",
    "@tanstack/react-router": "^1.132.0",
    "commander": "^14.0.1",
    "exceljs": "^4.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.15.1",
    "@nx/eslint": "^21.5.3",
    "@nx/playwright": "^21.5.3",
    "@nx/react": "^21.5.3",
    "@nx/vite": "^21.5.3",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "^1.55.0",
    "@semantic-release/changelog": "^6.0.3",
    "@tanstack/devtools-vite": "^0.3.3",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^4.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "knip": "^5.63.1",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.1.6",
    "memfs": "^4.43.0",
    "msw": "^2.11.3",
    "nx": "21.5.2",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.55.0",
    "semantic-release": "^24.2.9",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
}