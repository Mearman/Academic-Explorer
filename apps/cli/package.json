{
  "name": "@academic-explorer/cli",
  "version": "8.1.0",
  "type": "module",
  "description": "Command-line interface for OpenAlex data access",
  "keywords": ["cli", "openalex", "academic", "research", "typescript"],
  "author": "Joe Mearman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/Academic-Explorer.git",
