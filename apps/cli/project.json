{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "tags": ["app:cli"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["client:build", "utils:build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "apps/cli/dist",
        "main": "apps/cli/src/simple-cli.ts",
        "tsConfig": "apps/cli/tsconfig.json",
        "assets": []
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/cli"
      }
    },
    "typecheck:all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.typecheck.json",
        "cwd": "apps/cli"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint src --ext .ts --max-warnings 1000",
        "cwd": "apps/cli"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint src --ext .ts --fix --max-warnings 1000",
        "cwd": "apps/cli"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["test:unit", "test:integration"],
      "options": {
        "command": "echo 'All CLI tests completed successfully'",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "unit",
        "coverage": {
          "enabled": true,
          "reportsDirectory": "coverage/apps/cli"
        }
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "cache": true
    },
    "test:integration": {
      "executor": "@nx/vite:test",
      "options": {
        "project": "integration"
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vite.config.base.ts",
        "{projectRoot}/vitest.config.ts"
      ],
      "cache": true
    },
    "test:component": {
      "executor": "nx:noop",
      "options": {},
      "cache": false
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf apps/cli/dist"
      }
    }
  }
}
