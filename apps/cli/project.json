{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "tags": ["type:app", "scope:cli"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/openalex-cli.ts",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --watch",
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  }
}
