{
  "name": "academic-explorer",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "sourceRoot": ".",
  "projectType": "application",
  "targets": {
    "syncpack:lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "syncpack lint"
      },
      "inputs": [
        "{workspaceRoot}/**/package.json",
        "{workspaceRoot}/syncpack.config.ts",
        "{workspaceRoot}/pnpm-lock.yaml"
      ],
      "outputs": [],
      "cache": true
    },
    "coverage:report": {
      "executor": "nx:run-commands",
      "dependsOn": ["test"],
      "options": {
        "command": "tsx workspace-coverage.config.ts",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["default", "^production"],
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "coverage:ci": {
      "executor": "nx:run-commands",
      "dependsOn": ["test"],
      "options": {
        "command": "tsx workspace-coverage.config.ts",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "ci": {
          "command": "tsx workspace-coverage.config.ts"
        }
      }
    },
    "deps:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx tools/scripts/check-dependencies.ts",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["default", "^production"],
      "outputs": ["{workspaceRoot}/dependency-report.json"]
    }
  },
  "tags": ["scope:workspace", "type:root"]
}