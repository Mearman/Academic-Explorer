{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "baseUrl": ".",
    "paths": {
      "@academic-explorer/graph": ["packages/graph/src/index.ts"],
      "@academic-explorer/graph/*": ["packages/graph/src/*"],
      "@academic-explorer/utils": ["packages/utils/src/index.ts"],
      "@academic-explorer/utils/*": ["packages/utils/src/*"],
      "@academic-explorer/simulation": ["packages/simulation/src/index.ts"],
      "@academic-explorer/simulation/*": ["packages/simulation/src/*"],
      "@academic-explorer/client": ["packages/client/src/index.ts"],
      "@academic-explorer/client/*": ["packages/client/src/*"],
      "@academic-explorer/ui": ["packages/ui/src/index.ts"],
      "@academic-explorer/ui/*": ["packages/ui/src/*"]
    },
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "tmp"]
}