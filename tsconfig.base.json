{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@academic-explorer/graph": ["packages/graph/src/index.ts"],
      "@academic-explorer/graph/*": ["packages/graph/src/*"],
      "@academic-explorer/shared-utils": ["packages/shared-utils/src/index.ts"],
      "@academic-explorer/shared-utils/*": ["packages/shared-utils/src/*"],
      "@academic-explorer/simulation": ["packages/simulation/src/index.ts"],
      "@academic-explorer/simulation/*": ["packages/simulation/src/*"],
      "@academic-explorer/openalex-client": ["packages/openalex-client/src/index.ts"],
      "@academic-explorer/openalex-client/*": ["packages/openalex-client/src/*"],
      "@academic-explorer/ui-components": ["packages/ui-components/src/index.ts"],
      "@academic-explorer/ui-components/*": ["packages/ui-components/src/*"]
    },
    "allowJs": false,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "tmp"]
}