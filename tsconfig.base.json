{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
        "experimentalDecorators": true,
    "importHelpers": true,
    "moduleDetection": "force",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "composite": true,
    "declaration": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    // Base URL for path resolution
    "baseUrl": ".",
    // Workspace path mappings for intra-repo dependencies
    "paths": {
      "@academic-explorer/client": ["packages/client/src/index.ts"],
      "@academic-explorer/utils": ["packages/utils/src/index.ts"],
      "@academic-explorer/ui": ["packages/ui/src/index.ts"],
      "@academic-explorer/graph": ["packages/graph/src/index.ts"],
      "@academic-explorer/simulation": ["packages/simulation/src/index.ts"],
      "@academic-explorer/types": ["packages/types/src/index.ts"],
      // Path alias for apps/web internal imports
      "@/*": ["apps/web/src/*"]
    }
  },
  "include": ["types/**/*"],
  "exclude": ["node_modules", "tmp"]
}
